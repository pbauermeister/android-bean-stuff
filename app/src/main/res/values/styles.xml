    <style name="DeviceFontTiny" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/device_font_secondary</item>
    </style>

    <style name="DeviceFontHint" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/device_font_hint</item>
    </style>

