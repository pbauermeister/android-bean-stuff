    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="DeviceFontMain" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/device_font_main</item>
    </style>

    <style name="DeviceFontSecondary" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/device_font_secondary</item>
